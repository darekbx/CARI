<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <TextView
            android:id="@+id/welcome_message"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/please_select"
            />

        <LinearLayout
            android:id="@+id/preferences_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">
            <TextView
                android:id="@+id/preferences_tree_hint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Prefrences > Scope"
                android:typeface="monospace"
                android:padding="8dp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#666"
                />
            <ExpandableListView
                android:id="@+id/preferences_tree"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/databases_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">
            <TextView
                android:id="@+id/databases_tree_hint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Prefrences > Scope"
                android:typeface="monospace"
                android:padding="8dp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#666"
                />
            <ExpandableListView
                android:id="@+id/databases_tree"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                />
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/button_database"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Database"
            style="@style/DefaultButton"
            />
        <Button
            android:id="@+id/button_preferences"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Preferences"
            style="@style/DefaultButton"
            />
    </LinearLayout>

</LinearLayout>